@using StudentApp.Models
@model AllModels

@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">


    <div class="row">

        <div class="col-lg-6 m-1" style="text-align:start;">
            <form>
                <div class="form-group">
                    <label for="FullName">Full Name</label>
                    <input type="text" class="form-control" name="FullName" id="FullName" placeholder="Enter Full Name">
                   
                </div>
                 <div class="form-group">
                    <label for="EmailAddress">Email Address</label>
                    <input type="email" class="form-control" name="EmailAddress" id="EmailAddress" aria-describedby="emailHelp" placeholder="Enter Email Address">
                   
                </div>
                <div class="form-group" style="margin-bottom: 10px;">
                    <label for="City">City</label>
                    <input type="text" class="form-control" name="City" id="City"  placeholder="Enter City">
                   
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>

        <div class="col-lg-12">

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">StudentID</th>
                        <th scope="col">Student Name</th>
                        <th scope="col">Email Address</th>
                        <th scope="col">City</th>
                        <th scope="col">CreatedOn</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (Model.StudentsList != null && Model.StudentsList.Count > 0)
                        {
                            foreach (var iteam in Model.StudentsList)
                            {
                                <tr>
                                    <td>@iteam.StudentID</td>
                                    <td>@iteam.FullName</td>
                                    <td>@iteam.EmailAddress</td>
                                    <td>@iteam.City</td>
                                    <td>@iteam.CreateOn</td>


                                </tr>
                            }
                        }
                    }


            </table>

        </div>



    </div>



</div>